<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp">

    <ImageView
        android:id="@+id/iv_food_pairing_avatar"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/food_pairing"
        android:scaleType="centerCrop" />

    <TextView
        android:id="@+id/tv_food_pairing_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@+id/iv_food_pairing_avatar"
        app:layout_constraintBottom_toBottomOf="@+id/iv_food_pairing_avatar"
        app:layout_constraintLeft_toRightOf="@+id/iv_food_pairing_avatar"
        android:layout_marginStart="10dp"
        android:text="Name" />
</androidx.constraintlayout.widget.ConstraintLayout>