<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_favorite_beers_information_container"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/ib_favorite_beers_remove">

        <ImageView
            android:id="@+id/iv_favorite_beers_avatar"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:scaleType="fitCenter"
            android:src="@drawable/beer"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_favorite_beers_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:text="Name"
            app:layout_constraintLeft_toRightOf="@+id/iv_favorite_beers_avatar"
            app:layout_constraintTop_toTopOf="@+id/iv_favorite_beers_avatar" />

        <TextView
            android:id="@+id/tv_favorite_beers_tagline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:text="Tagline"
            app:layout_constraintLeft_toRightOf="@+id/iv_favorite_beers_avatar"
            app:layout_constraintTop_toBottomOf="@+id/tv_favorite_beers_name" />

        <TextView
            android:id="@+id/tv_favorite_beers_abv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:background="@drawable/shape_abv"
            android:text="ABV"
            android:textColor="@color/colorText"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@+id/iv_favorite_beers_avatar"
            app:layout_constraintTop_toBottomOf="@id/tv_favorite_beers_tagline" />

        <TextView
            android:id="@+id/tv_favorite_beers_ibu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:background="@drawable/shape_ibu"
            android:text="IBU"
            android:textColor="@color/colorText"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@+id/tv_favorite_beers_abv"
            app:layout_constraintTop_toBottomOf="@id/tv_favorite_beers_tagline" />

        <TextView
            android:id="@+id/tv_favorite_beers_ebc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:background="@drawable/shape_ebc"
            android:text="EBC"
            android:textColor="@color/colorText"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@+id/tv_favorite_beers_ibu"
            app:layout_constraintTop_toBottomOf="@id/tv_favorite_beers_tagline" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <ImageButton
        android:id="@+id/ib_favorite_beers_remove"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:scaleType="center"
        android:background="@drawable/close"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginEnd="10dp"
        android:contentDescription="Remove" />
</androidx.constraintlayout.widget.ConstraintLayout>